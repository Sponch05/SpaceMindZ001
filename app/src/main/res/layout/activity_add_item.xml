<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photoshop"
    tools:context="com.spacemindz.www.spacemindz001.AddItem">

    <TextView
        android:id="@+id/itemTypeTxt_view"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:text="Item type:"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/itemNameTxt_view"
        android:layout_width="141dp"
        android:layout_height="47dp"
        android:text="Item Name:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/itemPriceTxt_view"
        android:layout_width="122dp"
        android:layout_height="61dp"
        android:text="Item Price : "
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="333dp" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="171dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/itemTypeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/itemPriceField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="249dp" />
</android.support.constraint.ConstraintLayout>
